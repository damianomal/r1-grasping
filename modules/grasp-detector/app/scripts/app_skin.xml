<application>
    <name>app_skin</name>
    <description> Modules + connections to read skin sensors data from logs and running the data compensation.
    </description>

<!-- Modules -->

    <!-- yarpdataplayer -->

    <module>
        <name>yarpdataplayer</name>
        <parameters></parameters>
        <node>localhost</node>
    </module>

    <!-- skinManager -->

    <module>
        <name>skinManager</name>
        <parameters>--from skinManRight.ini</parameters>
        <dependencies>
            <port>/cer/skin/right_hand_skin</port>
        </dependencies>
        <node>localhost</node>
    </module>

    <!-- skinManagerGui -->

    <module>
        <name>skinManagerGui</name>
        <dependencies>
            <port>/skinManager/info:o</port>
            <port>/skinManager/monitor:o</port>
            <port>/skinManager/rpc</port>
        </dependencies>
        <node>localhost</node>
    </module>

<!-- Connections -->

    <!-- skinManagerGui -->

        <connection>
            <from>/skinManager/info:o</from>
            <to>/skinManagerGui/info:i</to>
            <protocol>tcp</protocol>
        </connection>

        <connection>
            <from>/skinManager/monitor:o</from>
            <to>/skinManagerGui/monitor:i</to>
            <protocol>tcp</protocol>
        </connection>

        <connection>
            <from>/skinManagerGui/rpc:o</from>
            <to>/skinManager/rpc</to>
            <protocol>tcp</protocol>
        </connection>

</application>
