<application>
<name>R1 Grasping Action Gateway Simulation</name>
<dependencies></dependencies>
<module>
    <name>cer_gaze-controller</name>
    <parameters>--robot SIM_CER_ROBOT --cameras::context cameraCalibration --cameras::file cerEyes_320x240.ini --joints-limits::pitch "(-20.0 20.0)" --joints-limits::yaw "(-40.0 40.0)" --verbosity 1 --T 1.0</parameters>
    <ensure>
        <wait when="stop">3</wait>
    </ensure>
    <node>localhost</node>
</module>
<module>
    <name>cer_reaching-solver</name>
    <parameters>--robot SIM_CER_ROBOT --arm-type left --verbosity 1</parameters>
    <node>localhost</node>
</module>
<module>
    <name>cer_reaching-solver</name>
    <parameters>--robot SIM_CER_ROBOT --arm-type right --verbosity 1</parameters>
    <node>localhost</node>
</module>
<module>
    <name>cer_reaching-controller</name>
    <parameters>--robot SIM_CER_ROBOT --arm-type left --verbosity 1 --T 1.0</parameters>
    <ensure>
        <wait when="stop">3</wait>
    </ensure>
    <node>localhost</node>
</module>
<module>
    <name>cer_reaching-controller</name>
    <parameters>--robot SIM_CER_ROBOT --arm-type right --verbosity 1 --T 1.0</parameters>
    <ensure>
        <wait when="stop">3</wait>
    </ensure>
    <node>localhost</node>
</module>
<module>
    <name>action-gateway</name>
    <parameters>--general::robot SIM_CER_ROBOT</parameters>
    <dependencies>
        <port timeout="5">/cer_gaze-controller/rpc</port>
        <port timeout="5">/cer_reaching-controller/left/rpc</port>
        <port timeout="5">/cer_reaching-controller/right/rpc</port>
    </dependencies>    
    <ensure>
        <wait when="start">3</wait>
    </ensure>    
    <node>localhost</node>
</module>
<connection>
    <from>/cer_reaching-controller/left/solver:rpc</from>
    <to>/cer_reaching-solver/left/rpc</to>
    <protocol>fast_tcp</protocol>
</connection>
<connection>
    <from>/cer_reaching-controller/right/solver:rpc</from>
    <to>/cer_reaching-solver/right/rpc</to>
    <protocol>fast_tcp</protocol>
</connection>
<connection>
    <from>/action-gateway/gaze/rpc</from>
    <to>/cer_gaze-controller/rpc</to>
    <protocol>fast_tcp</protocol>
</connection>
<connection>
    <from>/action-gateway/reach/left/rpc</from>
    <to>/cer_reaching-controller/left/rpc</to>
    <protocol>fast_tcp</protocol>
</connection>
<connection>
    <from>/action-gateway/reach/right/rpc</from>
    <to>/cer_reaching-controller/right/rpc</to>
    <protocol>fast_tcp</protocol>
</connection>
</application>

